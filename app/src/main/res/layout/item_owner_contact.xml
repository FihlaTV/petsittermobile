<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_contact_sitter"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginRight="6dp" />

    <TextView
        android:id="@+id/tv_contact_sitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_contact_sitter"
        android:paddingRight="16dp"
        android:textColor="@color/colorPrimarytext"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="oi" />

    <TextView
        android:id="@+id/tv_contact_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textSize="12sp"
        android:text="ter"
        android:layout_alignTop="@+id/tv_contact_sitter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_contact_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textSize="12sp"
        android:text="oioi"
        android:layout_alignBottom="@+id/iv_contact_sitter"
        android:layout_alignLeft="@+id/tv_contact_sitter"
        android:layout_alignStart="@+id/tv_contact_sitter" />
</RelativeLayout>