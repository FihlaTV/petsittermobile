<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/iv_sitter"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/iv_sitter"
        android:paddingRight="16dp"
        android:textColor="@color/colorPrimarytext"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:text="nome"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/iv_positive"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_below="@+id/tv_name"
        android:src="@drawable/like_"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_like_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/iv_positive"
        android:layout_marginLeft="10dp"
        android:paddingRight="16dp"
        android:textColor="@color/colorPrimarytext"
        android:textSize="12sp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_negative"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/tv_like_percent"
        android:src="@drawable/dislike_"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_dislike_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/iv_negative"
        android:layout_marginLeft="10dp"
        android:paddingRight="16dp"
        android:textColor="@color/colorPrimarytext"
        android:textSize="12sp"
        android:visibility="invisible"/>

    <View
        android:id="@+id/vw_divider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_below="@+id/iv_positive"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimaryLight" />

</RelativeLayout>