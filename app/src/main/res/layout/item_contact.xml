<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_contact_owner"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="6dp"/>

    <TextView
        android:id="@+id/tv_contact_owner"
        android:textColor="@color/colorPrimarytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_contact_owner"
        android:paddingRight="16dp"
        android:layout_marginBottom="5dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_contact_created_at"
        android:textColor="@color/colorPrimarytext"
        android:layout_below="@+id/tv_contact_owner"
        android:layout_alignLeft="@+id/tv_contact_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textSize="12sp" />

</RelativeLayout>