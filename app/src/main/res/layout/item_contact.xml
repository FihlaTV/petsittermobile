<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_contact_owner"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="6dp" />

    <TextView
        android:id="@+id/tv_contact_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/iv_contact_owner"
        android:paddingRight="16dp"
        android:textColor="@color/colorPrimarytext"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_contact_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_contact_owner"
        android:layout_below="@+id/tv_contact_owner"
        android:paddingRight="16dp"
        android:textSize="12sp"/>

    <View
        android:id="@+id/vw_divider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_alignLeft="@+id/tv_contact_owner"
        android:layout_below="@+id/tv_contact_period"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary" />

</RelativeLayout>