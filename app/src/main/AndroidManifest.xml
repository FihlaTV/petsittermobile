<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zekisanmobile.petsitter">

    <permission
        android:name="zekisanmobile.petsitter.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="zekisanmobile.petsitter.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".PetSitterApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.owner.OwnerHomeActivity"
            android:label="@string/title_activity_dono_home"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.owner.SitterProfileActivity"
            android:label="@string/title_activity_sitter_profile"
            android:launchMode="singleTop"
            android:parentActivityName=".view.owner.OwnerHomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.owner.NewContactActivity"
            android:label="Solicitação de Pet Sitter"
            android:parentActivityName=".view.owner.SitterProfileActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.sitter.SitterHomeActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.sitter.ContactDetailsActivity"
            android:label="Solicitação de Pet Sitter"
            android:parentActivityName=".view.sitter.SitterHomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.owner.ContactDetailsActivity"
            android:label="Pet Sitter"
            android:parentActivityName=".view.owner.MyPetSittersActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.owner.MyPetSittersActivity"
            android:label="Meus Pet Sitters"
            android:parentActivityName=".view.owner.OwnerHomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.sitter.OtherContactsActivity"
            android:parentActivityName=".view.owner.OwnerHomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.owner.RateActivity"
            android:label="Avaliação de Pet Sitter"
            android:parentActivityName=".view.owner.OwnerHomeActivity"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBBm-hbxgSk2bjQEXu9xIGPCUaL_L2dojk" />
        <meta-data
            android:name="AA_DB_NAME"
            android:value="PetSitter.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />
        <meta-data
            android:name="AA_MODELS"
            android:value="zekisanmobile.petsitter.Model.Animal,                             zekisanmobile.petsitter.Model.AnimalContact,                             zekisanmobile.petsitter.Model.AnimalSitter,                             zekisanmobile.petsitter.Model.Contact,                             zekisanmobile.petsitter.Model.Owner,                             zekisanmobile.petsitter.Model.Sitter,                             zekisanmobile.petsitter.Model.User" />
    </application>

</manifest>